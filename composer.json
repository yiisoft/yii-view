{
    "name": "yiisoft/yii-view",
    "type": "library",
    "description": "Yii binding for view rendering",
    "keywords": [
        "yii",
        "view"
    ],
    "homepage": "https://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/yii-view/issues?state=open",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/yii-view"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "psr/container-implementation": "1.0.0",
        "yiisoft/aliases": "^1.0",
        "yiisoft/arrays": "^3.0@dev",
        "yiisoft/csrf": "^3.0@dev",
        "yiisoft/data-response": "^3.0@dev",
        "yiisoft/strings": "^1.0",
        "yiisoft/view": "^3.0@dev"
    },
    "require-dev": {
        "infection/infection": "^0.16.3",
        "nyholm/psr7": "^1.3",
        "vimeo/psalm": "^4.1",
        "phpunit/phpunit": "^9.3",
        "yiisoft/di": "^3.0@dev",
        "yiisoft/event-dispatcher": "^3.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Yii\\View\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Yii\\View\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "config-plugin": {
            "params": "config/params.php",
            "web": "config/web.php"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "phpunit --colors --no-interaction"
        ]
    }
}
